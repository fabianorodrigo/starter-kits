{
  "name": "nodejs-express-ts-api",
  "version": "1.0.0",
  "description": "Consome API Github para obter dados de um usuário específico e mantém um cache em memória para não precisar buscar novamente os dados no Github caso uma consulta seja repetida.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npx tsc",
    "dev": "ts-node-dev --respawn src/index.ts",
    "lint": "npx eslint .",
    "lint-fix": "npx eslint . --fix",
    "test": "mocha -r ts-node/register ./src/test/mocha.spec.ts",
    "runRedis": "docker run -p 6379:6379 --rm --name starter-kit-redis redis"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.41",
    "@types/passport": "^1.0.9",
    "@types/passport-local": "^1.0.34",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.17.0",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@types/passport-http-bearer": "^1.0.37",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.1.0"
  }
